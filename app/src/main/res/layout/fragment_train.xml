<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/backgroundColor">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Training Center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/foregroundColor"
        android:textAlignment="center"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="bottom" >

        <TextView
            android:textColor="@color/progressColor"
            android:textSize="24sp"
            android:id="@+id/textview_n"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignParentLeft="true"
            android:text="0/20\nN" />

        <TextView
            android:textColor="@color/progressColor"
            android:textSize="24sp"
            android:id="@+id/textview_a"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0/10\nA" />

        <TextView
            android:textColor="@color/progressColor"
            android:textSize="24sp"
            android:id="@+id/textview_v"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0/10\nV" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Label incoming samples to train categories\nN: Normal\nA: Atrial premature beat\nV: Premature ventricular contraction"
        android:textStyle="italic"
        android:textColor="@color/inactiveTabColor"
        android:textAlignment="center"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="bottom" >

        <Button
            android:id="@+id/button_upload"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Upload Data" />

        <Button
            android:id="@+id/button_clear"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Clear Data" />

    </RelativeLayout>

    <Button
        android:id="@+id/button_sample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:text="Get Sample"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R-R Period (ms):"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/textview_period"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amplitude (V):"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/textview_amplitude"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="bottom" >

        <Button
            android:id="@+id/button_classify_n"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="N" />

        <Button
            android:id="@+id/button_classify_a"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="A" />

        <Button
            android:id="@+id/button_classify_v"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="V" />
    </RelativeLayout>


</LinearLayout>

</RelativeLayout>